<section class="loginWrapper">
    <h1 class="login-title">Login or Create an Account</h1>
    <div class="loginContainer">
        <div class="login">
            <form asp-controller="Home" asp-action="Index">
                <fieldset>
                    <legend>Login</legend>
                    <label for="email"><b>Email address</b></label><span class="required">*</span>
                    <input type="email" placeholder="Enter Your Email " name="email">
                    <label for="pwd"><b>Password</b></label><span class="required">*</span>
                    <a class="forgot-pwd" href="#">Forgot password?</a>
                    <input type="password" placeholder="Enter Your Password" name="pwd">
                    <label for="remember"><span>Remember me</span></label>
                    <input type="checkbox" checked="checked" name="remember" id="remember">
                    <button type="submit">Login</button>
                </fieldset>
            </form>
        </div>
        <div class="register">
            <form asp-controller="Home" asp-action="Index">
                <fieldset>
                    <legend>Create a New Account</legend>
                    <label for="email"><b>Email address</b></label><span class="required">*</span>
                    <input type="email" placeholder="Enter Your Email " name="email">
                    <label for="fname"><b>First Name</b></label><span class="required">*</span>
                    <input type="text" placeholder="First Name " name="fname" required>
                    <label for="lname"><b>Last Name</b></label><span class="required">*</span>
                    <input type="text" placeholder="Last Name " name="lname" required>
                    <label for="pwd1"><b>Create Password</b></label><span class="required">*</span>
                    <input type="password" placeholder="Chose a password" name="pwd1">
                    <label for="pwd2"><b>Retype your Password</b></label><span class="required">*</span>
                    <input type="password" placeholder="Retype your password" name="pwd2">
                    <button type="submit">Register</button>
                    <button type="reset">Cancel</button>
                </fieldset>
            </form>
        </div>
    </div>
</section>